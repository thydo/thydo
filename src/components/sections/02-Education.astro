---
/**
 * Education Section
 */
import { getResumeItems } from "../utils";

const items = await getResumeItems("02-education");
---

<section class="section section--education">
  <h2>Education</h2>

  {items.map((item) => (
    <article class="item item--compact">
      {item.data.degree && <h3>{item.data.degree}</h3>}
      {item.data.institution && <p class="subheader">{item.data.institution}</p>}
      <p class="inline-info">
        {item.data.graduation && <span>{item.data.graduation}</span>}
        {item.data.graduation && item.data.gpa && <span class="sep">|</span>}
        {item.data.gpa && <span>GPA {item.data.gpa}</span>}
      </p>
    </article>
  ))}
</section>

<style>
  .item--compact h3 { font-size: var(--size-h4); color: var(--h3); }
  .item--compact .subheader { font-size: var(--size-xs); color: var(--text-secondary); }
  .item--compact .inline-info { font-size: var(--size-xxs); color: var(--text-secondary); }
  .item--compact .inline-info .sep { margin: 0 var(--space-xs); }
</style>
