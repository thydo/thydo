---
/**
 * Skills Section
 */
import { getResumeItems } from "../utils";

const items = await getResumeItems("03-skills");
---

<section class="section section--skills">
  <h2>Technical Skills</h2>

  {items.map((item) => {
    const skills = item.body?.replace(/^- /gm, "").split("\n").filter(Boolean).join(", ");
    return (
      <div class="skill-category">
        {item.data.category && <h4>{item.data.category}</h4>}
        <span class="skill-list">{skills}</span>
      </div>
    );
  })}
</section>

<style>
  .section--skills { position: sticky; top: var(--space-lg); }
  .skill-category h4 {
    font-weight: 600;
    font-size: var(--size-h4);
    display: inline;
    color: var(--h4);
  }
  .skill-category h4::after { content: ": "; }
  .skill-list { display: inline; }
</style>
