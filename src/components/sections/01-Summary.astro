---
/**
 * Summary Section
 */
import { getResumeItems } from "../../utils";

const items = await getResumeItems("01-summary");
const item = items[0];
---

<section id="summary" class="section section--plaintext">
  <h2>Summary</h2>
  {item?.body && <p class="summary">{item.body}</p>}
</section>

<style>
  .summary { line-height: var(--leading-relaxed); }
</style>
