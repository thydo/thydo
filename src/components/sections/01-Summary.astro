---
/**
 * Summary Section
 */
import { getCollection } from "astro:content";

const allEntries = await getCollection("resume");
const item = allEntries.find(e => e.id.startsWith("01-summary/") && !e.id.includes("/00-"));
---

<section id="summary" class="section section--plaintext">
  <h2>Summary</h2>
  {item?.body && <p class="summary">{item.body}</p>}
</section>

<style is:global>
  .summary {
    color: var(--text);
    line-height: 1.7;
  }
</style>
